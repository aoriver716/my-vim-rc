scriptencoding utf-8
set encoding=utf-8

inoremap jk <ESC>
let mapleader = "'"

" Arguably the most important setting.
set relativenumber
set number

" Second most important settings.
set shiftwidth=4 smarttab
set expandtab
set tabstop=4 softtabstop=0

" Show ugly whitespace.
set list
set listchars=tab:└─→,trail:♢,extends:>,precedes:<,nbsp:·

" Search Settings
set ignorecase
set hlsearch
set incsearch

" Scroll Settings
set scrolloff=14
